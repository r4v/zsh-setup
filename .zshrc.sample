# Shortcuts
tarbz() {
    tar -cf "$1".tar.bz2 --use-compress-prog=/usr/bin/pbzip2 "$1"
}

untarbz() {
    /usr/bin/pbzip2 -dc "$1" | tar x --exclude="._*"
}



